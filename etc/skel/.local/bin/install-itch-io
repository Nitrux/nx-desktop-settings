set -x


# -- Download setup file.

wget -q -O ~/.local/bin/itch-setup https://raw.githubusercontent.com/Nitrux/storage/master/Other/itch-setup


# -- Run setup.

notify-send "Installing itch.io, please wait..." --icon=itch-io

chmod +x ~/.local/bin/itch-setup
~/.local/bin/./itch-setup

notify-send "Installation complete." --icon=itch-io


# -- Check if itch.io is installed an delete install script.

notify-send "Launching itch.io." --icon=itch-io

if [ -d "$HOME/.itch" ];
    then
         rm "$HOME/.local/bin/itch-setup"
         rm "$HOME/.local/bin/install-itch-io"
         rm "$HOME/.local/share/applications/install.itch.io.desktop"
fi


exit
